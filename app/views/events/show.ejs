
<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half is-offset-one-quarter">

        <div class="card">
          <div class="card-image" id="eventImage">
            <img src="<%= data.image %>">
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <h1 class="title is-3"><%= data.name %></h1>
                <input id="eventCreator" type="hidden" name="user" value="<%= data.user %>">
              </div>
            </div>

            <div class="content">
              <p>Event Location: <%= data.location %></p>
              <p>Event Description: <%= data.description %></p>
            </div>
            <div id="userButtons" class="level-item" style="display: none">
              <!-- <a class="button is-primary" href="../events-edit/<%= data._id %>">Edit</a> -->
              <button id="deleteEvent" class="button is-danger" >Delete</button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="/js/urlsrc.js" charset="utf-8"></script>
<script src="/js/show.js" charset="utf-8"></script>
<script src="/js/delete-event.js" charset="utf-8"></script>
