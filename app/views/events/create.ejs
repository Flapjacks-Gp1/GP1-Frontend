
<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half is-offset-one-quarter">


<h1 class="title is-2">Create Event</h1>
<figure class="image is-128x128" id="imgPreview">
  <img src="http://placehold.it/256x256" alt="" />
</figure>
<form id="uploadPhoto" method="post">
  <input type="file" name="file" id="imageUploader">
  <input type="submit" class="button is-primary" name="submit" value="Upload Image" id="uploadSubmit">
  <p id="status">Please select a file</p>
</form>

<form id="createform" action="/events-create" method="POST">
<input type="hidden" id="avatarUrl" name="image" value="http://placehold.it/256x256">
<label class="label">Event Name</label>
<p class="control">
  <input id = "eventname" class="input" type="text" placeholder="What is the name of your event?" name="name">
</p>
<label class="label">Event Location</label>
<p class="control has-icon has-icon-right">
  <input id = "eventlocation" class="input" type="text" placeholder="Where is your event?"  name="location">
</p>
<label class="label">Description</label>
<p class="control">
  <textarea id= "description" class="textarea" placeholder="Please describe the event." name="description"></textarea>
</p>
<input id="eventCreator" type="hidden" name="user">
<p class="control">
  <input type="submit" name="submit" value="Submit" class="button is-primary is-fullwidth">
</p>
</form>
    </div>
  </div>
</div>
</section>

