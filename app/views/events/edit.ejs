<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half is-offset-one-quarter">


<h1 class="title is-2">Edit Event</h1>

<label class="label">Event Name</label>

<form id="editEvent" method="POST">
  <input type="hidden" name="_method" value="PUT">
<p class="control">
  <input id = "eventname" class="input" type="text" name="name" value="<%= data.name %>">
</p>
<label class="label">Event Location</label>
<p class="control has-icon has-icon-right">
  <input id = "eventlocation" class="input is-success" type="text" name="location" value="<%= data.location %>">
</p>
<label class="label">Description</label>
<p class="control">
  <textarea id= "description" class="textarea" name="description"><%= data.description %></textarea>
</p>
<p class="control">
  <input type="submit" name="submit" value="Submit" class="button is-primary is-fullwidth">
</p>
</form>

</div>
</div>
</div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="js/urlsrc.js" charset="utf-8"></script>
<script src="/js/editevent.js" charset="utf-8"></script>
